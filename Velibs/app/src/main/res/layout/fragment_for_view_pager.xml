<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/status_icon"
        android:layout_toRightOf="@id/status_icon"
        android:layout_marginTop="3dp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/stands_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_icon"
        app:srcCompat="@drawable/ic_bike_stands"
        android:padding="5dp" />

    <TextView
        android:id="@+id/available_stands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_icon"
        android:layout_toRightOf="@id/stands_icon"
        android:layout_toEndOf="@id/stands_icon"
        android:layout_marginTop="3dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_icon"
        android:layout_toRightOf="@id/available_stands"
        android:layout_toEndOf="@id/available_stands"
        android:layout_marginTop="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="/"/>

    <TextView
        android:id="@+id/stands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_icon"
        android:layout_toRightOf="@id/slash"
        android:layout_toEndOf="@id/slash"
        android:layout_marginTop="3dp"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/geo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stands_icon"
        app:srcCompat="@drawable/ic_geo"
        android:padding="5dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stands_icon"
        android:layout_toRightOf="@id/geo_icon"
        android:layout_toEndOf="@id/geo_icon"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:textColor="@color/colorLink" />
    <ImageView
        android:id="@+id/maj_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geo_icon"
        app:srcCompat="@drawable/ic_update"
        android:padding="5dp" />

    <TextView
        android:id="@+id/last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/geo_icon"
        android:layout_toRightOf="@id/maj_icon"
        android:layout_toEndOf="@id/maj_icon"
        android:layout_marginTop="3dp"
        android:padding="5dp"/>

</RelativeLayout>